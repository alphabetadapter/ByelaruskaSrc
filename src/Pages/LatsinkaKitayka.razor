        dict.Add("b", "了");		// b
        dict.Add("c", "以");		// c
        dict.Add("d", "在");		// d
        dict.Add("e", "有");		// e
        dict.Add("f", "地");		// f
        dict.Add("g", "一");		// g
        dict.Add("h", "上");		// h
        dict.Add("i", "不");		// i
        dict.Add("j", "是");		// j
        dict.Add("k", "中");		// k
        dict.Add("l", "国");		// l
        dict.Add("m", "同");		// m
        dict.Add("n", "民");		// n
        dict.Add("o", "为");		// o
        dict.Add("p", "这");		// p
        dict.Add("q", "我");		// q
        dict.Add("r", "的");		// r
        dict.Add("s", "要");		// s
        dict.Add("t", "和");		// t
        dict.Add("u", "产");		// u
        dict.Add("v", "发");		// v
        dict.Add("w", "人");		// w
        dict.Add("x", "经");		// x
        dict.Add("y", "主");		// y
