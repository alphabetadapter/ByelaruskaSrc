@page "/latsinka-to-kitayka"

<PageTitle>Latsinka -> Kitayka</PageTitle>

@*<h6 class="fw-lighter text-secondary">Latsinka -> Kitayka</h6>*@

<textarea 
    onkeydown="textControl(this,event)"
    class="form-control" 
    id="textarea1" 
    value="@LatsinkaTxt" 
    @oninput="@((ChangeEventArgs e) => KitaykaTxt = GetValue(e?.Value?.ToString() ?? string.Empty))" />

<textarea 
    onkeydown="textControl(this,event)"
    class="form-control" 
    id="textarea2" >@KitaykaTxt</textarea>

@code {

    private string? KitaykaTxt { get; set; }
    private string? LatsinkaTxt { get; set; }

    private string GetValue(string LatsinkaValue)
    {
        var dict = GetDictionary();
        var tmpString = LatsinkaValue.ToLower() ?? string.Empty;
        foreach (var d in dict)
        {
            tmpString = tmpString.Replace(d.Key, d.Value);
        }
        return tmpString;
    }

    private IDictionary<string, string> GetDictionary()
    {
        var dict = new Dictionary<string, string>();

        // Chinese (Simplified, China)
        // Google Input Tools
        // https://www.google.com/inputtools/chrome/		
